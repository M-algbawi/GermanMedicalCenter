<style>
  .container {
    width: 60%;
    background: #f5f5f5;
    border: 20px solid #337ab7;
    border-radius: 50px;

}
</style>
<%= render 'shared/errors', obj: @article %>
<div class="container-fluid">
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Message", autofocus: true %>
        </div>
      </div>
       <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :sender %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sender, class: "form-control", placeholder: "Your Name", autofocus: true %>
        </div>
      </div>



      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Your Email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Your Message" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= submit_tag("Send Your Message") %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">

    </div>
  </div>
</div>
</div>
